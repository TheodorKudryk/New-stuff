#include <stdio.h>

int main() {
    int x, y;
    printf("Print first number here: ");
           scanf("%d", &x);
    printf("Print secound number here: ");
    scanf("%d", &y);
    
    if ( x > y )
    {
        int difference = (x - y);
        printf("The difference is: %d \n", difference);
     }
        else if ( y > x )
        {
           int difference = (y - x);
            printf("The difference is: %d \n", difference);
             }
        
            else  {
                printf("the numbers are equal! \n");
    
            }
    return 0;
}
